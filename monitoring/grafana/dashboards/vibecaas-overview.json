{
  "dashboard": {
    "id": null,
    "title": "VibeCaaS Platform Overview",
    "tags": ["vibecaas"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Active Apps",
        "type": "stat",
        "targets": [
          {
            "expr": "vibecaas_active_apps",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 80
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Apps Created (24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(vibecaas_apps_created_total[24h])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "API Response Time",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(vibecaas_app_action_duration_seconds_bucket[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.5
                },
                {
                  "color": "red",
                  "value": 1.0
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "GPU Utilization",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(DCGM_FI_DEV_GPU_UTIL)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 70
                },
                {
                  "color": "red",
                  "value": 90
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 5,
        "title": "Apps Created Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(vibecaas_apps_created_total[5m])",
            "refId": "A",
            "legendFormat": "Apps/sec"
          }
        ],
        "yAxes": [
          {
            "label": "Apps per second",
            "min": 0
          },
          {
            "show": false
          }
        ],
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "GPU Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "DCGM_FI_DEV_FB_USED",
            "refId": "A",
            "legendFormat": "GPU {{gpu}} Memory Used"
          },
          {
            "expr": "DCGM_FI_DEV_FB_TOTAL",
            "refId": "B",
            "legendFormat": "GPU {{gpu}} Memory Total"
          }
        ],
        "yAxes": [
          {
            "label": "Memory (MB)",
            "min": 0
          },
          {
            "show": false
          }
        ],
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 7,
        "title": "Container Resource Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=~\"vibecaas-.*\"}[5m])",
            "refId": "A",
            "legendFormat": "{{name}} CPU"
          },
          {
            "expr": "container_memory_usage_bytes{name=~\"vibecaas-.*\"} / 1024 / 1024",
            "refId": "B",
            "legendFormat": "{{name}} Memory (MB)"
          }
        ],
        "yAxes": [
          {
            "label": "Usage",
            "min": 0
          },
          {
            "show": false
          }
        ],
        "gridPos": {
          "h": 9,
          "w": 24,
          "x": 0,
          "y": 17
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}